#fullwidth {
	position: relative;
	width: auto;
	overflow:hidden;
	clear:left;
	margin:0;
	height:400px;
	background: #181818;
}
.pika-image {
	position: relative;
	height:400px;
	margin:0 auto;
	text-align:center;
}
	/*position image holders */
	.pika-image .animation, .pika-image .main-image {
		position: absolute;
	}
	.pika-image .animation {
		display: none;
		z-index:2;
	}
	.pika-image img {
		border:0;
		height:400px;
	}

.pika-image .caption {
	font-family: 'TradeGothic Condensed Bold', sans-serif ;
	position: absolute; 
	background: black;
	opacity:0.5;
	font-size: 14px;
	color: white;
	padding: 10px;
	text-align: right;
	top: 80px;
	right: 80px;
}
	.pika-image .caption p {
		padding: 0;
		margin: 0;
		line-height: 14px;
	}

.pika-imgnav a {
	position: absolute;
	text-indent: -5000px;
	display: block;
	z-index:3;
}
	.pika-imgnav a.previous {
		background:url('../images/arrows.png') -30px 0 no-repeat;
		display:block;
		width:30px;
		height:30px;
		top: 200px;
		left: 10px;
		cursor:pointer;
	}
	.pika-imgnav a.next {
		background:url('../images/arrows.png') 0 0 no-repeat;
		display:block;
		width:30px;
		height:30px;
		top: 200px;
		right: 10px;
		cursor:pointer;
	}
	.pika-imgnav a.play {
		background:url('../images/arrows.png') -30px -30px no-repeat;
		display:block;
		width:30px;
		height:30px;
		top: 200px;
		left:49%;
		display: none;
		cursor:pointer;
	}
	.pika-imgnav a.pause {
		background:url('../images/arrows.png') 0px -30px no-repeat;
		display:block;
		width:30px;
		height:30px;
		top: 200px;
		left:49%;
		display:none;
		cursor:pointer;
	}

.pika-textnav {
	overflow: hidden;
	margin: 10px 0 0 0;
}
	.pika-textnav a {
		font-size: 12px;
		text-decoration: none;
		color: #333;
		padding: 4px;
	}
			.pika-textnav a:hover {
				background: #e5e5e5;
				color: #0065B2;
			}
	.pika-textnav a.previous {
		float: left;
		width: auto;
		display: block;
	}
	.pika-textnav a.next {
		float: right;
		width: auto;
		display: block;
	}
	
