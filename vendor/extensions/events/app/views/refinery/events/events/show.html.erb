<% content_for :body_content_title do %>
  <div class="event_image">
    <%= image_fu @event.photo, nil %>
  </div>
  <h1><%= @event.name %></h1>
  <h1><div class="gray"><%=@event.start_time.strftime("%l:%M %p")%> <%= @event.date.strftime("%A %m/%d") %><br/>
  <%=@event.place %></div></h1>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @event.description %>
    </p>
  </section>
<% end %>

