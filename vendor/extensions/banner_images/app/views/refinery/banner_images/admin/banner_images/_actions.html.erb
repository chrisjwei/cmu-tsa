<ul>
  <% if ::Refinery::BannerImages::Admin::BannerImagesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.banner_images_admin_banner_images_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_banner_images_admin_banner_image_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::BannerImages::Admin::BannerImagesController.sortable? && ::Refinery::BannerImages::BannerImage.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Banner Images"),
                 refinery.banner_images_admin_banner_images_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Banner Images"),
                 refinery.banner_images_admin_banner_images_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
