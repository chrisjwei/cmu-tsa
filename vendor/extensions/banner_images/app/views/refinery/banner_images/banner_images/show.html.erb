<% content_for :body_content_title do %>
  <%= @banner_image.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @banner_image.name %>
    </p>
  </section>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @banner_image.title %>
    </p>
  </section>
  <section>
    <h1>Content</h1>
    <p>
      <%=raw @banner_image.content %>
    </p>
  </section>
  <section>
    <h1>Background Color</h1>
    <p>
      <%=raw @banner_image.background_color %>
    </p>
  </section>
  <section>
    <h1>Link</h1>
    <p>
      <%=raw @banner_image.link %>
    </p>
  </section>
  <section>
    <h1>Data X</h1>
    <p>
      <%=raw @banner_image.data_x %>
    </p>
  </section>
  <section>
    <h1>Data Y</h1>
    <p>
      <%=raw @banner_image.data_y %>
    </p>
  </section>
  <section>
    <h1>Data Z</h1>
    <p>
      <%=raw @banner_image.data_z %>
    </p>
  </section>
  <section>
    <h1>Data Rotate</h1>
    <p>
      <%=raw @banner_image.data_rotate %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @banner_image.photo, nil %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="banner_images">
      <% @banner_images.each do |banner_image| %>
        <li>
          <%= link_to banner_image.name, refinery.banner_images_banner_image_path(banner_image) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
