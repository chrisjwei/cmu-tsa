<ul>
  <% if ::Refinery::SlidingImages::Admin::SlidingImagesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.sliding_images_admin_sliding_images_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_sliding_images_admin_sliding_image_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::SlidingImages::Admin::SlidingImagesController.sortable? && ::Refinery::SlidingImages::SlidingImage.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Sliding Images"),
                 refinery.sliding_images_admin_sliding_images_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Sliding Images"),
                 refinery.sliding_images_admin_sliding_images_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
