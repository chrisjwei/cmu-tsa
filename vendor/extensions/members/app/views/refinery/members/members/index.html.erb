<% content_for :body_content_left do %>
<div class='members_index'>
  <div class='row inquiries'>
  <% @members.each_with_index do |member, i| %>
    <% if i != 0 && i % 5 == 0 %>
      </div><div class='row'>
    <% end %>
    <% if i != 0 && i % 4 == 0 %>
      <div class="threecol last">
    <% else %>
      <div class="threecol">
    <% end %>
      <div class="members">
        <div class="info">
          <h1><%= member.name %></h1>
          <div class="year">
            <p>Class of <%= member.grad_year.strftime("%Y") %></p>
          </div>
          <div class="major">
            <p><%= member.major %></p>
          </div>
        </div>
        <%= image_fu(member.photo, nil) %>
      </div>
    </div>
  <% end %>
  </div>
</div>
<% end %>

<%= render '/refinery/content_page' %>
