<% content_for :body_content_title do %>
  <%= @officer.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @officer.name %>
    </p>
  </section>
  <section>
    <h1>Position</h1>
    <p>
      <%=raw @officer.position %>
    </p>
  </section>
  <section>
    <h1>Major</h1>
    <p>
      <%=raw @officer.major %>
    </p>
  </section>
  <section>
    <h1>Blurb</h1>
    <p>
      <%=raw @officer.blurb %>
    </p>
  </section>
  <section>
    <h1>Graduating Year</h1>
    <p>
      <%=raw @officer.graduating_year %>
    </p>
  </section>
  <section>
    <h1>Active</h1>
    <p>
      <%=raw @officer.active %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @officer.photo, nil %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="officers">
      <% @officers.each do |officer| %>
        <li>
          <%= link_to officer.name, refinery.officers_officer_path(officer) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
