<% content_for :body_content_left do %>
    <% @officers.each do |officer| %>
      <div class="row">
        <div class="officer">
          <div class="fivecol">
          	<div class="image">
          		<%= image_fu officer.photo, nil %>
          	</div>
          </div>
          <div class="sevencol last">
          	<div class="text">
              <div class="position">
            		<h1><div class="gray"><%= officer.name %></div></h1>
            		<h1><%= officer.position_name %></h1>
          		</div>
              <div class="major">
    	      		<p>Class of <%= officer.graduating_year %></p>
    	      		<p><%= officer.major %></p>
    	      	</div>
          		<div class="blurb">
    	      		<%= raw officer.blurb %>
      				</div>
          	</div>
          </div>
        </div>
  		</div>
    <% end %>
<% end %>

<%= render '/refinery/content_page' %>
