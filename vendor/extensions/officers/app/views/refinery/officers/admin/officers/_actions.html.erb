<ul>
  <% if ::Refinery::Officers::Admin::OfficersController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.officers_admin_officers_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_officers_admin_officer_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Officers::Admin::OfficersController.sortable? && ::Refinery::Officers::Officer.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Officers"),
                 refinery.officers_admin_officers_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Officers"),
                 refinery.officers_admin_officers_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
