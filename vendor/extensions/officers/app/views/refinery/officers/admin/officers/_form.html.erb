<%= form_for [refinery, :officers_admin, @officer] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @officer,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :position -%>
    <%= f.select(:position, Refinery::Officers::Officer.list, :prompt => "Select ...") %>

  </div>
  
  <div class='field'>
    <%= f.label :major -%>
    <%= f.text_field :major  -%>

  </div>
  
  <div class='field'>
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <% [:blurb].each_with_index do |part, part_index| %>
          <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
            <%= link_to t("#{part}", :scope => "activerecord.attributes.refinery/officers/officer", :default => part.to_s.titleize), "##{part}" %>
          </li>
        <% end %>
      </ul>
      <div id='page_part_editors'>
        <% [:blurb].each do |part| %>
          <div class='page_part' id='<%= part %>'>
            <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
          </div>
        <% end %>
      </div>
    </div>

  </div>
  
  <div class='field'>
    <%= f.label :graduating_year -%>
    <%= f.number_field :graduating_year, :value => Time.now.year -%>

  </div>
  
  <div class='field'>
    <%= f.label :active -%>
    <%= f.check_box :active, :checked => @officer[:active]  -%>

  </div>
  
  <div class='field'>
    <%= f.label :photo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_id,
               :image => @officer.photo,
               :toggle_image_display => false %>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.officers.admin.officers.officer'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @officer.name) %>
<% end -%>
<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end %>
